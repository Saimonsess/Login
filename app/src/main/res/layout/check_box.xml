<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#7ADCD4"
    tools:context=".Check">

    <CheckBox
        android:id="@+id/chkSeleccionar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/pri"
        android:fontFamily="monospace"
        android:text="Pinchame"
        android:textSize="30dp"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnSeleccionar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:onClick="btnChek"
        android:text="Presioname"
        android:textSize="30dp"
        android:fontFamily="monospace"
        android:textColor="@color/black"
        android:background="@drawable/background_grounded"
        />
</RelativeLayout>